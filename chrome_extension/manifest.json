{
  "name": "Mission Control",
  "description": "Quickly add backlog items from the Omnibox",
  "version": "1.0",
  "icons": {
    "128": "icon128.png"
  },
  "omnibox": { "keyword" : "m" },
  "commands": {
    "open-mission-control": {
      "suggested_key": {
        "mac": "MacCtrl+M",
        "default": "Ctrl+M"
      },
      "description": "Open tab: Mission Control spreadsheet"
    },
    "open-inbox": {
      "suggested_key": {
        "mac": "MacCtrl+I",
        "default": "Ctrl+I"
      },
      "description": "Open tab: Gmail inbox"
    },
    "open-calendar": {
      "suggested_key": {
        "mac": "MacCtrl+C"
      },
      "description": "Open tab: Calendar"
    },
    "open-all-filter-view": {
      "description": "Open filter view: All"
    },
    "open-next-filter-view": {
      "description": "Open filter view: Next"
    },
    "open-waiting-filter-view": {
      "description": "Open filter view: Waiting"
    },
    "open-later-filter-view": {
      "description": "Open filter view: Later"
    },
    "reload-filter-view": {
      "description": "Reload filter view"
    },
    "mark-item-done": {
      "suggested_key": {
        "mac": "Command+Period",
        "default": "Ctrl+Period"
      },
      "description": "Mark selected item as done"
    }
  },
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "oauth2": {
    "client_id": "",
    "scopes":["https://www.googleapis.com/auth/spreadsheets"]
  },
  "permissions": [
    "identity",
    "tabs",
    "notifications",
    "storage"
  ],
  "host_permissions": ["https://script.googleapis.com/*"],
  "content_scripts": [
    {
      "matches": ["https://docs.google.com/spreadsheets/*"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ]
}