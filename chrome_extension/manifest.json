{
  "name": "Mission Control",
  "description": "Add to-dos from the Omnibox and navigate your backlog with keyboard shortcuts",
  "version": "1.0",
  "icons": {
    "128": "icon128.png"
  },
  "omnibox": { "keyword" : "m" },
  "commands": {
    "configurable-1": {
      "description": "Configurable shortcut 1"
    },
    "configurable-2": {
      "description": "Configurable shortcut 2"
    },
    "configurable-3": {
      "description": "Configurable shortcut 3"
    },
    "configurable-4": {
      "description": "Configurable shortcut 4"
    },
    "configurable-5": {
      "description": "Configurable shortcut 5"
    },
    "configurable-6": {
      "description": "Configurable shortcut 6"
    },
    "configurable-7": {
      "description": "Configurable shortcut 7"
    },
    "configurable-8": {
      "description": "Configurable shortcut 8"
    },
    "configurable-9": {
      "description": "Configurable shortcut 9"
    },
    "open-mission-control": {
      "suggested_key": {
        "mac": "MacCtrl+M",
        "default": "Ctrl+M"
      },
      "description": "Open tab: Mission Control spreadsheet"
    },
    "open-all-filter-view": {
      "description": "Open filter view: All"
    },
    "open-next-filter-view": {
      "description": "Open filter view: Next"
    },
    "open-waiting-filter-view": {
      "description": "Open filter view: Waiting"
    },
    "open-later-filter-view": {
      "description": "Open filter view: Later"
    },
    "reload-filter-view": {
      "description": "Reload filter view"
    },
    "mark-item-done": {
      "suggested_key": {
        "mac": "Command+Period",
        "default": "Ctrl+Period"
      },
      "description": "Mark selected item as done"
    },
    "enter-waiting-cell": {
      "description": "Jump into \"Wait until\" cell"
    },
    "schedule-items": {
      "description": "Schedule items"
    }
  },
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "identity",
    "tabs",
    "notifications",
    "storage"
  ],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["https://docs.google.com/spreadsheets/*"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ]
}